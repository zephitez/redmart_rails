<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@cart.products) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :picture %>
    <%= f.label :name %>
    <%= f.label :price %>

    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: 'form-control' %>

      <%= f.submit "Update Cart", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
