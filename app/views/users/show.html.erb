<% provide(:title, @user.username) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.username.upcase %>
      </h1>
    </section>
      </aside>

  <div class="col-md-8">
   <% if @user.reviews.any? %>
     <h3>Reviews (<%= @user.reviews.count %>)</h3>
     <ol class="reviews">
       <%= render @reviews %>
     </ol>
     <%= will_paginate @reviews %>
   <% end %>
 </div>
</div>
