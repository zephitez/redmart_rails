<% provide(:title, @product.name) %>

<div class="row">
    <aside class="col-md-4">
        <img src="<%= @product.picture %>"/>

    </aside>

    <div class="col-md-8">
        <h3>
            <%= @product.name.titleize %>
        </h3>
        <div class="product-attr">
            <p>Description:</p>
            <%= @product.description %>
            <p>Price:</p>
            <%= @product.price %>
            <p>
                <%= link_to "Add to Cart", cart_path, method: :post %>

                <% if current_user.admin? %>

              | <%= link_to "Edit", edit_product_path(@product.id) %> | <%= link_to "Delete Product", @product, method: :delete,
                                   data: { confirm: "You sure?" } %>
               <% end %>
            </p>
              <h4>Reviews</h4>
            <%= render 'shared/feed' %>
            <section class="review_form">
                <%= render 'shared/review_form' %>
            </section>
        </div>
    </div>



</div>
